@model List<Flower>
@{
}

<h2 class="text-center mb-5">List of Flowers</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary"
           asp-controller="Flowers"
           asp-action="Create">Add New Flower</a>
    </div>

    <div class="col">
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var flower in Model)
    {
    <tr>
        <td>@flower.Id</td>
        <td>@flower.Name</td>
        <td>@flower.Category</td>
        <td>@(flower.Price)$</td>
                <td><img src="/FlowersImages/@flower.ImageFileName" width="100" /></td>
        <td>@flower.CreatedAt.ToString("MM/dd/yyyy")</td>
        <td style="white-space:nowrap">
            <a class="btn btn-primary btn-sm" asp-controller="Flowers" asp-action="Edit"
               asp-route-id="@flower.Id">Edit</a>
            <a class="btn btn-danger btn-sm" asp-controller="Flowers" asp-action="Delete"
               asp-route-id="@flower.Id" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
    </tr>
    }

    </tbody>
</table>
